{
  "compilerOptions": {
    "importHelpers": true,
    "isolatedModules": true,
    "lib": [
      "es2022"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": [
      "development"
    ],
    "baseUrl": ".",
    "paths": {
      "@cocteau-twins-pc/shared-types": ["libs/shared-types/src/index.ts"],
      "@cocteau-twins-pc/rust-core": ["libs/rust-core/src/lib.rs"]
    }
  }
}